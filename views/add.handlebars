<style>
    span {
        margin: 20px;
    }
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
</style>
<div class="container">
    <h1>Add New Vehicle</h1>
      {{!-- flash messages --}}
    <p style="color: green;" class="green">{{messages.success}}</p>
    <p style="color: red;" class="red">{{messages.error}}</p>
    <br>

    <form action="/add" method="POST">
            <label for="description">Description</label>
            <input type="text" name="description"  placeholder="Enter Description">
            <br>
            <br>
            <label for="regNumber">Registration Number</label>
            <input type="text" name="regNumber" placeholder="Enter Registration Number">
            <br>
            <br>
        <button type="submit" class="btn btn-primary" style="background-color: rgb(18, 69, 69); border-color:rgb(18, 69, 69);">Add Vehicle</button>
    </form>
    <br>
       <span><a href="/">Click to see added cars</a></span>  <span><a href="/refuel">Click here to refuel vehicle</a></span>
</div>
{{!-- script for messages to dissapear are 3 seconds --}}
<script>
  setTimeout(function () { document.querySelector('.red').innerHTML = ''; },
  3000);
   setTimeout(function () { document.querySelector('.green').innerHTML = ''; },
  3000);
</script> 
